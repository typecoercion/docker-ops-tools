#!/bin/bash
# docker run -it -v $(pwd):/app ghcr.io/typecoercion/ops-tools:0.2.26 bootstrap
set -e

_run_in_container() {
  mkdir -p /app/config
  mkdir -p /app/credentials
  cp -i /etc/files/.editorconfig /app/.editorconfig
  cp -i /etc/files/.envrc.example /app/.envrc
  cp -i /etc/files/.gitignore.example /app/.gitignore
  cp -iR /etc/files/* /app
}

_run_in_container
